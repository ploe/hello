	IF !DEF(JOYPAD_INC)
JOYPAD_INC SET 1

JOYPAD_DOWN EQU %10000000
JOYPAD_UP EQU %01000000
JOYPAD_LEFT EQU %00100000
JOYPAD_RIGHT EQU %00010000
JOYPAD_DPAD EQU %11110000

JOYPAD_BTN_DOWN: MACRO
	ld a, [JoypadButtons]
	and \1

	ENDM

